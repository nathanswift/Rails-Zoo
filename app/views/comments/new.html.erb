<h1>Add a Comment</h1>
<%= form_with(model: [@animal, @comment], local: true, class: "ui form") do |f| %>
  <%= f.label :body %>
  <%= f.text_area :body, required: true %>
  <br />
  <%= f.label :author %>
  <%= f.text_field :author, required: true %>
  <br />
  <br />
  <%= f.submit nil, class: "ui button blue" %> 
<% end %>
